//计算n的阶乘
#include <stdio.h>
int main()
{
	int a = 0;
	int b = 0;
	int c = 1;
	scanf("%d", &a);
	for (b = 1; b <= a; b++)
		c = c * b;  //如果接多个语句 则要加个大括号
	printf("%d", c);
	return 0;
}






//计算1！+2！....+10！
#include <stdio.h>
int main()
{
	int a = 1;
	int b = 1;
	int c = 1;
	int d = 0;
	for (a = 1; a <= 10; a++)
	{
		for (b = 1; b <= a; b++)
			c = c * b;
		d = c + d;
		c = 1;  //关键一步 否则阶乘计算有误 放前面放后面都行
	}
	printf("%d", d);
	return 0;
}



//计算1！+2！...+10！ 优化
#include <stdio.h>
int main()
{
	int a = 0;
	int b = 0;
	int c = 1;
	int d = 0;
	for (a = 1; a <= 3; a++)
	{
		for (b = 1; b <= a; b++)
		{
			if (b != a)
				continue;
			c = c * b;
		}
		d = c + d;
	}
	printf("%d", d);
	return 0;
}
其实更复杂了 （哭）






//计算1！+2！....+10！ 更优化
#include <stdio.h>
int main()
{
	int a = 1;
	int b = 1;
	int c = 1;
	int d = 0;
	for (a = 1; a <= 3; a++)
	{
		c = c * a;
		d = c + d;
	}
	printf("%d", d);
	return 0;
}




